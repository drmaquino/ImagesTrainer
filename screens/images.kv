#:kivy 1.4
#:import SpeffzKeyboard modules.botonera.SpeffzKeyboard

<WelcomeScreen>:
    BoxLayout:
        orientation: 'vertical'

        Label:
            font_size: '%s sp' % (self.width*.1)
            text: "[b]Images\n[color=3333ff]Trainer[/b][/color]"
            markup: True
            size_hint_y: 4

        BoxLayout:
            orientation: 'vertical'
            padding: 30
            spacing: 30
            size_hint_y: 3

            Button:
                text: 'Encoding practice'
                font_size: '%s sp' % (self.width*.05)
                on_press: root.open_encoding_practice()

            Button:
                text: 'Recall practice'
                font_size: '%s sp' % (self.width*.05)
                on_press: root.open_recall_practice()

            # Button:
            #     text: 'Placeholder'
            #     font_size: '%s sp' % (self.width*.05)
            #     on_press: root.open_recall_practice()

        Label:
            text: 'Mariano Aquino - 2014'
            size_hint_y: 3
            padding_y: self.height*.3
            font_size: '%s sp' % (self.width*.03)


<EncodingScreen>:

    BoxLayout:
        orientation: 'vertical'
        padding: 10, 10
        spacing: 10

        Label:
            text: 'Images Trainer'
            halign: 'center'
            valign: 'middle'
            size_hint_y: 1

        Label:
            text: root.current_pair
            font_size: '%s sp' % (self.width*.1)
            size_hint_y: 1

        GridLayout:
            cols: 2
            padding: 30
            spacing: 30
            size_hint_y: 5

            Button:
                text: '0'
                background_color: 0,0,0,0
                on_press: root.register_input(self)

                Image:
                    source: root.PATH_IMAGE_0
                    pos: self.parent.pos
                    height: self.parent.height
                    width: self.parent.width

            Button:
                text: '1'
                background_color: 0,0,0,0
                on_press: root.register_input(self)

                Image:
                    source: root.PATH_IMAGE_1
                    pos: self.parent.pos
                    height: self.parent.height
                    width: self.parent.width

            Button:
                text: '2'
                background_color: 0,0,0,0
                on_press: root.register_input(self)

                Image:
                    source: root.PATH_IMAGE_2
                    pos: self.parent.pos
                    height: self.parent.height
                    width: self.parent.width

            Button:
                text: '3'
                background_color: 0,0,0,0
                on_press: root.register_input(self)

                Image:
                    source: root.PATH_IMAGE_3
                    pos: self.parent.pos
                    height: self.parent.height
                    width: self.parent.width

        BoxLayout:
            size_hint_y: 1

            Label:
                text: root.current_result
                font_size: '%s sp' % (self.width*.1)
                size_hint_x: 2

            Image:
                source: root.result_indicator

        Button:
            text: root.current_msg
            font_size: '%s sp' % (self.width*.03)
            on_press: root.start()
            size_hint_y: 1

        Button:
            text: 'Quit'
            font_size: '%s sp' % (self.width*.03)
            on_release: root.quit()
            size_hint_y: 1


<RecallScreen>:
    my_kb: my_kb

    BoxLayout:
        orientation: 'vertical'
        padding: 10, 10
        spacing: 10

        Label:
            text: 'Images Trainer'
            halign: 'center'
            valign: 'middle'
            size_hint_y: 1

        BoxLayout:
            size_hint_y: 5

            BoxLayout:
                Image:
                    source: root.current_image
                    allow_stretch: True
                    size_hint: .9, .9

            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'center'

                Image:
                    source: root.result_indicator
                    allow_stretch: True
                    size_hint: .5, .5

        BoxLayout:
            size_hint_y: 5

            SpeffzKeyboard:
                id: my_kb

        Button:
            text: root.current_msg
            font_size: '%s sp' % (self.width*.03)
            on_press: root.show_image()
            size_hint_y: 2

        Button:
            text: 'Quit'
            font_size: '%s sp' % (self.width*.03)
            on_release: root.quit()
            size_hint_y: 2
